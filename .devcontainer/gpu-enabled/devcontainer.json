{
  "name": "Python + Apache TVM (CUDA)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "runArgs": [
    "--gpus",
    "all"
  ],
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "postCreateCommand": "python -m pip install --upgrade pip && pip install --extra-index-url https://tlcpack.ai/wheels apache-tvm-cu122 jupyter numpy pillow pytest",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "remoteUser": "vscode"
  // "remoteUser": "vscode",
  // "hostRequirements": {
  //   "gpu": "nvidia",
  //   "memory": "8gb"
  // }
}